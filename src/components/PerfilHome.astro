---

<div class="bg-gray-900 text-white min-h-screen p-6">
  <div class="max-w-sm mx-auto">
    <header class="flex items-start mb-8">
      <img src="/tobidev.jpeg" alt={profile.fullName} class="w-24 h-24 rounded-full mr-6">
      <div class="flex-1">
        <div class="flex justify-between items-center mb-4">
          <h1 class="text-2xl font-semibold">{profile.name}</h1>
          <button class="px-4 py-1 bg-gray-800 text-white text-sm font-semibold rounded-md">Edit Profile</button>
        </div>
        <div class="flex justify-between mb-4 text-sm">
          <span><strong>{profile.posts}</strong> Posts</span>
          <span><strong>{profile.followers}</strong> Followers</span>
          <span><strong>{profile.following}</strong> Following</span>
        </div>
        <p class="font-semibold">{profile.fullName}</p>
        <p class="text-sm mt-1">{profile.bio}</p>
      </div>
    </header>

    <div class="flex space-x-6 mb-8">
      {stories_pinned.map(storie => (
        <div class="text-center">
          <div class="w-16 h-16 rounded-full bg-gray-800 flex items-center justify-center mb-2">
            <span class="text-2xl">{storie.name}</span>
          </div>
          <span class="text-xs">{storie.name}</span>
        </div>
      ))}
    </div>

    <div class="grid grid-cols-3 gap-2">
      {posts_cards.map(post => (
        <div class="aspect-square bg-gray-800 flex items-center justify-center rounded-md">
          <img src={post.img} alt={`Post ${post.id}`} class="w-16 h-16" />
        </div>
      ))}
    </div>
  </div>
  <div class="text-transparent mt-12 h-24"></div>
</div>