<div id="mediaPlayer"  class="fixed bottom-16 left-0 right-0 bg-black bg-opacity-75 text-white hidden">
  <div class="flex items-center justify-between p-2">
    <div class="flex items-center space-x-3 flex-1">
      <img id="albumCover" src="" alt="Album Cover" class="w-16 h-16 object-cover mr-4">
      <div>
        <p id="songTitle" class="text-white"></p>
        <p id="artistName" class="text-gray-400 text-sm"></p>
      </div>
    </div>

    <div class="flex items-center space-x-4">
      <button id="play_button" class="text-white">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-9 w-9" viewBox="0 0 24 24" fill="currentColor">
          <path d="M8 5v14l11-7z"/>
        </svg>
      </button>
      <button id="pause_button" class="text-white hidden">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-9 w-9" viewBox="0 0 24 24" fill="currentColor">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zM7 8a1 1 0 012 0v4a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v4a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
      </button>
    </div>
  </div>

  <div class="w-full bg-gray-600 h-1">
    <div id="progressBar"  class="progressBarContainer bg-white h-1 w-0"></div>
  </div>
</div>
<script src="../scripts/MediaPlayer.js"></script>
